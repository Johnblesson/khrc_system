<!-- storageTable.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column; /* Change to column direction */
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    h1 {
      margin-bottom: 20px; /* Add margin for spacing */
    }

    table {
      border-collapse: collapse;
      width: 80%;
    }

    th, td {
      border: 1px solid #dddddd;
      text-align: center;
      padding: 16px;
      font-size: 14px;
    }

    th {
      background-color: #f2f2f2;
    }

    /* Style for the first column (row labels) */
    th:first-child, td:first-child {
      background-color: #e0e0e0;
      font-weight: bold;
    }

    /* Style for the first row (column labels) */
    th:not(:first-child) {
      background-color: #e0e0e0;
      font-weight: bold;
    }

    /* Add CSS for the storage-cell class */
    .storage-cell {
      position: relative;
      overflow: hidden;
    }

    /* Animation for the storage-cell class */
    .storage-cell.new-storage {
      animation: moveRight 1s ease-in-out;
    }

    @keyframes moveRight {
      0% {
        transform: translateX(-100%);
      }
      100% {
        transform: translateX(0);
      }
    }
  </style>
  <title>Table</title>
</head>
<body>

  <h1>LS2 STORAGE POSITION</h1>

  <table>
    <thead>
      <tr>
        <th></th>
        <% for (let i = 1; i <= 9; i++) { %>
          <th><%= i %></th>
        <% } %>
      </tr>
    </thead>
    <tbody>
      <% const rows = ['A', 'B', 'C', 'D', 'E', 'F', 'G', 'H', 'I']; %>
      <% for (const row of rows) { %>
        <!-- EJS logic to render each row based on your storage data -->
        <tr>
          <th><%= row %></th>
          <% for (let i = 1; i <= 9; i++) { %>
            <td class="storage-cell"><%= row + i %></td>
          <% } %>
        </tr>
      <% } %>
    </tbody>
  </table>

</body>
</html>
