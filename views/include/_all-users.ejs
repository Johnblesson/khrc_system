<style>
    .storage-info {
        text-align: center;
      margin-top: 20px;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    .role-pink-bg {
        background-color: pink;
        }

    .role-green-bg {
            background-color: rgb(118, 243, 118);
        }
  </style>

 <!-- Display information about the latest storage entry -->
 <div class="storage-info">
      <h2>ALL USERS</h2>
  </div>

    <div class="container mx-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">UserName</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200" id="tbody">
                <% data.forEach(user => { %>
                        <tr>  
                            <td class="px-6 py-4 whitespace-nowrap"><%= user.username %></td>
                            <td class="px-6 py-4 whitespace-nowrap"><a href="mailto:<%= user.email %>"><%= user.email %></a>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap <%= user.role === 'admin' ? 'role-pink-bg' : (user.role === 'user' ? 'role-green-bg' : '') %>">
                                <%= user.role %>
                            </td>
                            <!-- ... Your existing table data columns ... -->
                            <td class="px-6 py-4 whitespace-nowrap">
                                <!-- Add icons with links to your delete, view, and update routes -->
                                <a href="#"><i class="fas fa-trash-alt text-red-500 cursor-pointer"></i></a>
                                <a href="#"><i class="fas fa-eye text-blue-500 cursor-pointer mx-2"></i></a>
                                <a href="#"><i class="fas fa-edit text-green-500 cursor-pointer"></i></a>
                              </td>
                        </tr>
                        <% }); %>
            </tbody>
        </table>
    </div>
    
</div>

